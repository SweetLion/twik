<resources>

    <style name="Theme.Hashmypass"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/hashmypass_main</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/hashmypass_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/hashmypass_main</item>
    </style>

    <!-- Theme for toolbar -->
    <style name="Theme.Hashmypass.Toolbar"
           parent="Theme.Hashmypass">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style
        name="tutorialStyle"
        parent="android:style/Theme.Holo.Light.NoActionBar"/>

    <style name="tutorialLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>